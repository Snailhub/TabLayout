<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- TabLayout -->
        <item name="tabLayoutStyle">@style/Widget.TabLayout</item>
    </style>



    <style name="Widget.TabLayout" parent="TabLayoutStyle">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>



    <style name="TextAppearance.Tab" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/tab_unselected_text_color</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="TabLayoutStyle" parent="android:Widget">
        <item name="tabMinWidth">40dp</item>
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/tab_indicator_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorWidth">10dp</item>
        <item name="tabIndicatorMarginBottom">0dp</item>
        <item name="tabIndicatorMarginTop">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?android:attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.Tab</item>
        <item name="tabSelectedTextColor">@color/tab_selected_text_color</item>
    </style>



</resources>
